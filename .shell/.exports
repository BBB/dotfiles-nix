# Set locale
export LANG=en_US.UTF-8

# Set vim as the default editor
export EDITOR="vim"
export VISUAL=$EDITOR

# Set terminal type
export TERM="xterm-256color"

# Set colors for `ls` command
export CLICOLOR=1
# OSX
export LSCOLORS="gxfxcxdxbxegedabagacad"
# GNU
export LS_COLORS="di=36:ln=35;40:so=32;40:pi=33;40:ex=31:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43:"

export DISABLE_AUTO_TITLE="true"

# Set history file
if [[ -n $BASH_VERSION ]]; then
  export HISTFILE="$HOME/.bash_history"
elif [[ -n $ZSH_VERSION ]]; then
  export HISTFILE="$HOME/.zsh_history"
fi

# Set history size
export HISTSIZE=10000
export SAVEHIST=10000

# Ocaml
source $HOME/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true
eval "$(opam config env)"

# Ruby
eval "$(rbenv init -)"

# Rust
export CARGO="$HOME/.cargo"

# Go
export GOROOT="/usr/local/opt/go/libexec"

# Swift
export SWIFT="/Library/Developer/Toolchains/swift-latest.xctoolchain"

# PATH
export PATH="$CARGO/bin:$GOROOT/bin:$SWIFT/usr/bin:$PATH"
