# `p 3000` will print listners of port 3000
function p() {
  lsof -n -i:$@ | grep LISTEN
}

# `ruby-up 2.0.0` will update ruby to v2.0.0 using rvm
function ruby-up() {
  rvm get stable && \
  rvm install ruby-$@ --disable-binary && \
  rvm --default use $@ && \
  gem install bundler && \
  gem install foreman
}
