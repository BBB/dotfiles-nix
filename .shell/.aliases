# ===== Shell
alias install="$HOME/Dev/System/dotfiles/install.sh"

[[ -n $BASH_VERSION ]] && alias reload="source ~/.bashrc"
[[ -n $ZSH_VERSION ]]  && alias reload="source ~/.zshrc"

# Navigation
alias ..="cd .."
