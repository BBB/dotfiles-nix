dls() {
  echo "--- Images:\n"
  docker image ls
  echo "\n\n--- Containers:\n"
  docker container ls
  echo "\n\n--- Volumes:\n"
  docker volume ls
  echo "\n\n--- Networks:\n"
  docker network ls
}

alias dc="docker-compose "
