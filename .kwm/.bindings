define ~ /Users/Alex

// Quit Kwm
kwmc bindsym cmd+alt+ctrl-q quit

// Set Space Tiling Mode To BSP
kwmc bindsym cmd+ctrl-a space -t bsp

// Set Space Tiling Mode To Monocle
kwmc bindsym cmd+ctrl-s space -t monocle

// Set Space Tiling Mode To Floating
kwmc bindsym cmd+ctrl-d space -t float

// Rotate Window-Tree
kwmc bindsym cmd+ctrl-r tree rotate 90
kwmc bindsym cmd+ctrl-t tree rotate 180

// Toggle float mode for window
kwmc bindsym cmd+ctrl-f window -t focused

// Set Temporary Window Container
kwmc bindsym cmd+ctrl-return window -z fullscreen

// Change split-ratio
kwmc bindsym cmd+shift-up window -c expand 0.05
kwmc bindsym cmd+shift-down window -c reduce 0.05

// Give Focus To Window
kwmc bindsym cmd-] window -f next
kwmc bindsym cmd-[ window -f prev
kwmc bindsym cmd+ctrl-left window -f west
kwmc bindsym cmd+ctrl-right window -f east
kwmc bindsym cmd+ctrl-up window -f north
kwmc bindsym cmd+ctrl-down window -f south

// Move Focused Window
kwmc bindsym ctrl+alt-left window -s west
kwmc bindsym ctrl+alt-right window -s east
kwmc bindsym ctrl+alt-up window -s north
kwmc bindsym ctrl+alt-down window -s south

// Give Focus To Screen
kwmc bindsym cmd+ctrl-0 display -f 0
kwmc bindsym cmd+ctrl-9 display -f 1

// Move Focused Window To Screen
kwmc bindsym ctrl+alt-0 window -m display 0
kwmc bindsym ctrl+alt-9 window -m display 1

// Toggle focused window border
kwmc bindsym cmd+ctrl-b exec ~/.kwm/scripts/toggle-focused-border.sh

// Mark and Swap Windows
kwmc bindsym cmd+ctrl-m exec ~/.kwm/scripts/mark-and-swap-windows.sh
