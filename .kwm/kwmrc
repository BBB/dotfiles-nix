# Set default values for screen padding
kwmc config padding 60 40 60 60

# Set default values for container gaps
kwmc config gap 15 15

# Default tiling mode for Kwm (bsp | monocle | float | off)
kwmc config tiling bsp

# Automatically float windows that fail to resize
kwmc config float-non-resizable on

# Automatically resize the window to its container
kwmc config lock-to-container on

# Disabled focus-follows-mouse-mode
kwmc config focus-follows-mouse off

# Focus-follows-mouse is temporarily disabled when a floating window has focus
kwmc config focus standby-on-float on

# Center window when made floating
kwmc config center-on-float on

# The mouse will automatically move to the center of the focused window
kwmc config mouse-follows-focus off

# Allows a window to be moved by dragging, when a modifier key and left-click is held down.
# Allows a window to be resized by dragging when a modifier key and right-click is held down.
kwmc config mouse-drag on

# The modifier keys to be held down to initiate mouse-drag
kwmc config mouse-drag mod cmd+ctrl

# Allow window focus to wrap-around
kwmc config cycle-focus on

# Default tiling mode for new spaces
kwmc config space bsp

# Override default settings for space 1 on display 0
kwmc config space 0 1 mode monocle
kwmc config space 0 1 padding 40 20 20 20
kwmc config space 0 1 focused-border off

# Override default settings for space 1 on display 1
kwmc config space 1 1 mode monocle
kwmc config space 1 1 padding 40 20 20 20
kwmc config space 1 1 focused-border off

# Override default settings for display 1
kwmc config display 1 mode monocle

# Set default container split-ratio
kwmc config split-ratio 0.5

# New splits become the right leaf-node
kwmc config spawn right

# Add custom tiling rules for applications that does not get tiled by Kwm by default.
# This is because some applications do not have the AXWindowRole and AXStandardWindowSubRole
kwmc rule owner="iTerm" properties={role="AXDialog"}
kwmc rule owner="iTerm2" properties={role="AXDialog"}

# The following command blacklists a specific application from Kwms tiling.
# If the name consist of multiple words, the command looks like: kwmc config float Google Chrome
kwmc rule owner="Atom" properties={float="true"}
kwmc rule owner="CloudApp" properties={float="true"}
kwmc rule owner="Billings Pro" properties={float="true"}
kwmc rule owner="CleanMyMac 3" properties={float="true"}
kwmc rule owner="Photo Booth" properties={float="true"}

# Configure border for focused window, disabled by default
kwmc config border focused off
kwmc config border focused size 1
kwmc config border focused color 0xFFD5C4A3
kwmc config border focused radius 0

# Configure border for marked window, enabled by default
kwmc config border marked on
kwmc config border marked size 2
kwmc config border marked color 0xFFCC5577
kwmc config border marked radius 0
