#!/usr/bin/env osascript -l JavaScript

function run() {
  Minima.run("~/Dev/Projects/minima.pro/minima", {
    root: "atom client server specs .",
    servers: "scripts/up",
    specs: "cd specs",
  });
}

const iTerm = Application("iTerm");
const Utils = Library("utils");

iTerm.includeStandardAdditions = true;
iTerm.activate();

const Minima = {
  run(path, cmd) {
    const container = iTerm.createWindowWithDefaultProfile();

    const rootSession = container.currentSession;
    const serversSession = rootSession.splitHorizontallyWithDefaultProfile();
    const specsSession = serversSession.splitVerticallyWithDefaultProfile();

    Utils.prepareSessions(path, [
      rootSession,
      serversSession,
      specsSession,
    ]);

    rootSession.write({ text: cmd.root, newline: false });
    serversSession.write({ text: cmd.servers, newline: false });
    specsSession.write({ text: cmd.specs, newline: true });
    rootSession.select();
  }
};
